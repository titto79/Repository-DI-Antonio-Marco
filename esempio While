#include <stdio.h>

int main(void) {
    int n = 5;           // 1) Contatore di iterazioni

    // 2) while: ripete finché n > 0
    while (n > 0) {
        printf("Valore di n: %d\n", n);
        n--;             // 3) Decremento del contatore
    }

    printf("Fine ciclo while\n");
    return 0;
}
------------------------------
#include <stdio.h>

int main() {
    int valore;
    int calcolo=0;
    int zero=1;
    
    while (zero!=0){
        printf("Inserisci un valore intero:\n");
        scanf("%d",&valore);
        if (valore>0){
            calcolo=calcolo+valore;
        }else if (valore<0){
            printf("Hai inserito un valore negativo!!");
        }else{
            // zero=0;
            break;
        }
    }
    printf("la somma dei valori è:%d",calcolo);
    return 0;    
}
